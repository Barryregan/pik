<%= render 'shared/page_title', title: "#{@photographer.togname}'s profile" %>
<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= gravatar_for @photographer, size: 150 %>
    </div>
</div>
<% if @photographer.themes.count != 0 %>
    <h4 align= "center"><%= @photographer.togname %>'s theme's</h4>
    <div align ="center">
        <%= will_paginate @photographer_themes %>
    </div>
    <%= render 'themes/theme', obj: @photographer_themes %>
    <div align ="center">
        <%= will_paginate @photographer_themes %>
    </div>
<% else %>
 <h4 align = "center">No themes yet!</h4>


<% end %>
