<h1 align = "center">Listing all Themes</h1>
<br />
<% @themes.each do |theme| %>
    <div class="row">
        <div class ="col-md-2">
            <section class="center">
                
            </section>
        </div>
    <div class= "col-md-8 well">
        <h4><%= theme.name %></h4>
        <p><%= truncate(theme.description, length:150) %></p>
        <p>
            <span class= "quiet"><small>Created<%=time_ago_in_words(theme.created_at) %> ago </small></span>
        </p>
    </div>
    </div>
<% end %>
