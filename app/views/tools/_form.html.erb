<%= render 'shared/errors', obj: @tool %>

<div class = "row">
    <div class = "col-md-12">
       <%= form_for( @tool, :html => { class: "form-horizontal", role: "form"}) do |f| %> 
        <div class = "form-group">
            <div class= "control-label col-md-2">
                <%= f.label :name %>
            </div>
            <div class = "col-md-8">
                <%= f.text_field :name, class: "form-control", placeholder: "Tool used", autofocus: true %>
            </div>
        </div>
            <div class = "form-group">
                <div class="col-md-offset-2 col-md-10">
                    <%= f.submit(@tool.new_record? ? "Add Tool" : "Update Tool", 
                                            class: "btn btn-primary btn-lg btn-xlarge") %>
                </div>
            </div>
                    <% end %>
        <div class="col-md-4 col-md-offset-4 color_as">
            [ <%= link_to "Cancel request and return to tools listing", tools_path %> ]
        </div>
    </div>
</div>