<%= render 'shared/page_title', title: " Play by the tools" %>

<div align="center">
    <%= will_paginate %>
    <% @tools.each do |t| %>
        <ul class="listing">
            <div class="row">
                <div class="well col-md-4 col-md-offset-4">
                    <li class="photographer-title"><%= link_to t.name.capitalize, tool_path(t) %></li>
                    <li><small><%= pluralize(t.themes.count, "theme") if t.themes %></small></li>
                    <% if logged_in? && current_photographer.admin? %>
                    <li><%= link_to "Edit this tool", edit_tool_path(t) %></li>
                    <% end %>
                </div>
            </div>
        </ul>
    <% end %>
    <%= will_paginate %>
</div>