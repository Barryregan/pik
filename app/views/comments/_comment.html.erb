<div class="row comment-revise">
    <div class="col-md-2">
        <section class="photographer_info center">
            <%= gravatar_for(comment.photographer, size: 90) %>
        </section>
    </div>
    <div class="col-md-8 well">
        <p><%= comment.description %></p>
        <p><span class= "quiet"><small>Created: <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.photographer.togname %></small></span></p>
    </div>
</div>